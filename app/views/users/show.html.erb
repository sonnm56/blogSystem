<%= @user.name %>, <%= @user.email %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%#= link_to image_tag("naruto.jpg", alt: "Rails"), 'http://rubyonrails.org/' %> 
				<%=gravatar_for @user %>
				<%= @user.name %>

			</h1>
		</section>
	</aside>
	<div class="span8">
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
       	  <%= render @microposts %>
      	</ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>